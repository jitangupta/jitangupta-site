          <h2 id={`faq-heading-${index}`}  class="border rounded-xl border-primary-200 bg-white gap-3 my-5">
            <button type="button" class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500" data-accordion-target={`#faq-open-body-${index}`} aria-expanded="false" aria-controls={`faq-open-body-${index}`}>
              <span class="flex items-center">{faq.question}</span>
              <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="#b5571d" viewBox="0 0 10 6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
              </svg>
            </button>
            <div id={`faq-open-body-${index}`} class="hidden" aria-labelledby={`faq-heading-${index}`}>
