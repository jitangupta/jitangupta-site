<section id="how-i-work" class="py-24 bg-[#11161d]">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">How I Work</h2>
      <p class="text-muted max-w-2xl mx-auto">Transparent, structured, and focused on delivery.</p>
    </div>
    
    <div class="max-w-4xl mx-auto">
      <div class="relative">
        <!-- Vertical Line -->
        <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-px bg-gray-800 transform md:-translate-x-1/2"></div>
        
        <!-- Step 1 -->
        <div class="relative z-10 mb-12 md:mb-20">
          <div class="flex flex-col md:flex-row items-center">
            <div class="flex-1 md:text-right md:pr-12 mb-4 md:mb-0 w-full pl-12 md:pl-0">
              <h3 class="text-xl font-bold text-white mb-2">Discovery & Design</h3>
              <p class="text-muted text-sm mb-3">Audit infrastructure, document constraints, and design architecture.</p>
              <span class="inline-block px-2 py-1 bg-blue-500/10 text-accent text-xs font-mono rounded border border-blue-500/20">1-2 weeks</span>
            </div>
            
            <div class="absolute left-0 md:left-1/2 w-8 h-8 bg-[#0d1117] border-2 border-accent rounded-full flex items-center justify-center transform md:-translate-x-1/2">
              <span class="text-xs font-bold text-white">1</span>
            </div>
            
            <div class="flex-1 md:pl-12 w-full pl-12 md:pl-0">
              <div class="bg-card p-6 rounded-lg border border-gray-800">
                <span class="text-xs font-bold text-gray-500 uppercase tracking-wider block mb-2">Deliverable</span>
                <p class="text-white font-medium">Architecture proposal with timeline</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Step 2 -->
        <div class="relative z-10 mb-12 md:mb-20">
          <div class="flex flex-col md:flex-row items-center">
            <div class="flex-1 md:order-2 md:pl-12 mb-4 md:mb-0 w-full pl-12 md:pl-0">
              <h3 class="text-xl font-bold text-white mb-2">Build & Implement</h3>
              <p class="text-muted text-sm mb-3">Hands-on development, regular updates, and iterative feedback.</p>
              <span class="inline-block px-2 py-1 bg-blue-500/10 text-accent text-xs font-mono rounded border border-blue-500/20">4-8 weeks</span>
            </div>
            
            <div class="absolute left-0 md:left-1/2 w-8 h-8 bg-[#0d1117] border-2 border-accent rounded-full flex items-center justify-center transform md:-translate-x-1/2">
              <span class="text-xs font-bold text-white">2</span>
            </div>
            
            <div class="flex-1 md:order-1 md:text-right md:pr-12 w-full pl-12 md:pl-0">
              <div class="bg-card p-6 rounded-lg border border-gray-800">
                <span class="text-xs font-bold text-gray-500 uppercase tracking-wider block mb-2">Deliverable</span>
                <p class="text-white font-medium">Working system in production</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Step 3 -->
        <div class="relative z-10">
          <div class="flex flex-col md:flex-row items-center">
            <div class="flex-1 md:text-right md:pr-12 mb-4 md:mb-0 w-full pl-12 md:pl-0">
              <h3 class="text-xl font-bold text-white mb-2">Document & Handoff</h3>
              <p class="text-muted text-sm mb-3">Runbooks, training sessions, and full ownership transfer.</p>
              <span class="inline-block px-2 py-1 bg-blue-500/10 text-accent text-xs font-mono rounded border border-blue-500/20">1 week</span>
            </div>
            
            <div class="absolute left-0 md:left-1/2 w-8 h-8 bg-[#0d1117] border-2 border-accent rounded-full flex items-center justify-center transform md:-translate-x-1/2">
              <span class="text-xs font-bold text-white">3</span>
            </div>
            
            <div class="flex-1 md:pl-12 w-full pl-12 md:pl-0">
              <div class="bg-card p-6 rounded-lg border border-gray-800">
                <span class="text-xs font-bold text-gray-500 uppercase tracking-wider block mb-2">Deliverable</span>
                <p class="text-white font-medium">Your team owns and operates it</p>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</section>
